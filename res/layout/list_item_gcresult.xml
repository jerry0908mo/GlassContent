<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" android:background="@drawable/line_bg"
    android:orientation="vertical"  >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/precent_b"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="配方中不可燃比例B(%)"  android:gravity="left|center_vertical"/>

        <TextView
             android:id="@+id/wight_x"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"  
            android:text="杯重X(g)"  android:gravity="center"/>

        <TextView  android:id="@+id/wight_y"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"  
            android:text="料重Y(g)" android:gravity="center" />

        <TextView android:id="@+id/wight_z"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"  
            android:text="烧后杯料重Z(g)"  android:gravity="center"/>

        <TextView android:id="@+id/precent_gc"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"  
            android:gravity="center_vertical|right"
            android:text="玻纤含量(%)"  />
    </LinearLayout>

    <TextView
        android:id="@+id/create_time"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="right|center_vertical"  android:paddingRight="5dp"
        android:hint="2013/5/13 20:13"   android:visibility="gone" />

</LinearLayout>