<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.jerryzhang.glasscontent"
    android:versionCode="3"
    android:versionName="1.0.2" >

    <uses-sdk
        android:minSdkVersion="3"
       />
    
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="net.jerryzhang.glasscontent.MainActivity"
            android:label="@string/title_activity_main" android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name="net.jerryzhang.glasscontent.HistroyActvity" android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>